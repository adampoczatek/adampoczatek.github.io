<div class="dropdown">
  <label class="dropdown__label" for="dropdown">{{ text }}</label>
  <div class="dropdown__list">
    <select id="dropdown" class="dropdown__options"{{#if isDisabled}} disabled{{/if}}>
        {{#each options}}
        <option>{{ this }}</option>
        {{/each}}
    </select>
  </div>
</div>